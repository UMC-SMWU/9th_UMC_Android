<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/main_fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_default_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Toolbar
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_700"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toTopOf="@id/main_view">

            <ImageButton
                android:id="@+id/main_setting_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/outline_settings_applications_24"
                android:background="@color/transparent"
                android:layout_marginEnd="15dp"
                android:layout_gravity="end"/>

            <ImageButton
                android:id="@+id/main_ticket_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/outline_mobile_ticket_24"
                android:background="@color/transparent"
                android:layout_marginEnd="15dp"
                android:layout_gravity="end"/>

            <ImageButton
                android:id="@+id/main_mic_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/outline_mic_24"
                android:background="@android:color/transparent"
                android:layout_marginEnd="15dp"
                android:layout_gravity="end"/>
        </Toolbar>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/purple_700"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/main_toolbar"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:id="@+id/playlist_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:text="달밤의 감성 산책"
                android:textSize="32dp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageButton
                android:id="@+id/playlist_button"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/baseline_play_circle_24"
                android:background="@color/transparent"
                android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/playlist_title"/>

            <TextView
                android:id="@+id/playlist_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="총 10곡 2025.9.24"
                android:textColor="@color/white"
                android:layout_margin="15dp"
                app:layout_constraintTop_toBottomOf="@id/playlist_button"
                app:layout_constraintStart_toStartOf="parent" />

            <LinearLayout
                android:id="@+id/playlist_song_example1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                app:layout_constraintTop_toBottomOf="@id/playlist_text"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_album_50"
                    android:layout_marginEnd="15dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Song TITLE"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Singer of the song"
                        android:textColor="@color/white"
                        android:textSize="18dp" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/playlist_song_example2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="15dp"
                app:layout_constraintTop_toBottomOf="@id/playlist_song_example1"
                app:layout_constraintStart_toStartOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/baseline_album_50"
                    android:layout_marginEnd="15dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Song TITLE"
                        android:textColor="@color/white"
                        android:textSize="20dp"
                        android:textStyle="bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Singer of the song"
                        android:textColor="@color/white"
                        android:textSize="18dp" />
                </LinearLayout>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/today_release_songs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/main_view"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="오늘의 발매 음악"
                android:textStyle="bold"
                android:textColor="@color/black"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:src="@drawable/outline_arrow_forward_ios_24"/>
        </LinearLayout>

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/song_fragmentContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/today_release_songs"
            app:layout_constraintVertical_bias="0.494" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
        android:id="@+id/mini_player"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15dp"
        app:layout_constraintBottom_toTopOf="@id/main_bnv"
        app:layout_constraintStart_toStartOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/icon_color"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SONG TITLE"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Singer"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <View
                android:layout_width="150dp"
                android:layout_height="0dp"/>
            <ImageButton
                android:id="@+id/mini_player_arrow_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_arrow_left_24"
                android:layout_gravity="end"
                android:background="@color/transparent"/>
            <ImageButton
                android:id="@+id/mini_player_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_play_arrow_24"
                android:background="@color/transparent"
                android:layout_gravity="end"/>
            <ImageButton
                android:id="@+id/mini_player_arrow_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/outline_arrow_right_24"
                android:background="@color/transparent"/>
            <ImageButton
                android:id="@+id/mini_player_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/outline_queue_music_24"
                android:background="@color/transparent"/>
            </LinearLayout>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/main_bnv"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="5dp"
        android:paddingHorizontal="15dp"
        android:paddingTop="5dp"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconSize="29dp"
        app:labelVisibilityMode="labeled"
        app:itemRippleColor="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>