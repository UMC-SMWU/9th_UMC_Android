<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/home_header_bg"
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:contentDescription="@null"
            android:importantForAccessibility="no"
            android:scaleType="centerCrop"
            android:src="@drawable/img_first_album_default"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />

        <LinearLayout
            android:id="@+id/home_hero_actions_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="18dp"
            android:paddingHorizontal="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/btn_home_mike"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:layout_marginHorizontal="6dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/btn_main_mike"
                android:contentDescription="@string/btn_home_mike"/>

            <ImageButton
                android:id="@+id/btn_home_ticket"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:layout_marginHorizontal="6dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/btn_main_ticket"
                android:contentDescription="@string/btn_home_ticket"/>

            <ImageButton
                android:id="@+id/btn_home_setting"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitCenter"
                android:layout_marginHorizontal="6dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/btn_main_setting"
                android:contentDescription="@string/btn_home_setting"/>
        </LinearLayout>

        <!-- 상단 배너 추천 플레이 리스트 캐러셀 -->
        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/home_playlist_pager"
            android:layout_width="0dp"
            android:layout_height="320dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            app:layout_constraintTop_toBottomOf="@id/home_hero_actions_ll"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/home_playlist_pager"/>

        <!-- Dots Indicator -->
        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
            android:id="@+id/home_playlist_pager_indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:dotsColor="#CDCDCD"
            app:selectedDotColor="#3050F7"
            app:dotsSize="7dp"
            app:dotsSpacing="5dp"
            app:layout_constraintTop_toBottomOf="@id/home_playlist_pager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- 오늘 발매 음악 -->
        <TextView
            android:id="@+id/today_release_music_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘 발매 음악"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:paddingVertical="18dp"
            android:paddingStart="15dp"
            android:paddingEnd="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_playlist_pager_indicator"
            app:layout_constraintBottom_toTopOf="@id/today_release_music_rv"/>

        <ImageView
            android:id="@+id/release_arrow"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/btn_main_arrow_more"
            app:layout_constraintStart_toEndOf="@id/today_release_music_title"
            app:layout_constraintTop_toBottomOf="@id/home_playlist_pager_indicator"
            app:layout_constraintBottom_toTopOf="@id/today_release_music_rv"
            app:tint="@color/black" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/today_release_tabs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@null"
            app:tabSelectedTextColor="@color/purple_500"
            app:tabTextColor="@color/gray_color"
            app:tabMode="fixed"
            android:layout_marginEnd="15dp"
            app:layout_constraintStart_toEndOf="@id/release_arrow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/home_playlist_pager_indicator"
            app:layout_constraintBottom_toTopOf="@id/today_release_music_rv" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/today_release_music_rv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:clipToPadding="false"
            android:layout_marginHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@id/today_release_music_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>