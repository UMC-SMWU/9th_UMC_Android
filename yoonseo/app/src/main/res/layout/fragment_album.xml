<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/album_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AlbumFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/album_appBar"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:background="@color/white"
        android:fitsSystemWindows="false"
        android:clipToPadding="false"
        app:liftOnScroll="true">

        <Toolbar
            android:id="@+id/album_toolbar"
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <ImageButton
                android:id="@+id/toolbar_back_btn"
                android:contentDescription="Go to Back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:background="@color/white"
                android:src="@drawable/btn_arrow_black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:textColor="#737373"
                android:visibility="invisible"
                android:text="Album Title" />

            <ImageButton
                android:id="@+id/album_more_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:background="@color/white"
                android:src="@drawable/btn_player_more" />

            <ImageButton
                android:id="@+id/album_like_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitCenter"
                android:layout_gravity="end"
                android:layout_marginEnd="12dp"
                android:background="@color/white"
                android:src="@drawable/ic_my_like_off" />

        </Toolbar>
        
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsingToolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:titleEnabled="false"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:contentScrim="?attr/colorSurface"
            app:scrimAnimationDuration="180">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical">

                <!--앨범 커버 및 정보-->
                <TextView
                    android:id="@+id/album_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/album_singer"
                    android:textSize="21sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Album Title"/>

                <TextView
                    android:id="@+id/album_singer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/album_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="17sp"
                    android:text="singer"/>

                <TextView
                    android:id="@+id/album_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/album_singer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="2025.10.01 정규 재즈"/>

                <ImageView
                    android:id="@+id/album_cover_Iv"
                    android:layout_width="190dp"
                    android:layout_height="190dp"
                    app:layout_constraintTop_toBottomOf="@id/album_detail"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/rounded_corner"
                    android:clipToOutline="true"
                    android:src="@drawable/fascination_moon"
                    />

                <ImageButton
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/widget_black_play"
                    android:background="@null"
                    android:layout_margin="3dp"
                    app:layout_constraintBottom_toBottomOf="@id/album_cover_Iv"
                    app:layout_constraintEnd_toEndOf="@id/album_cover_Iv" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/album_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorHeight="2.5dp"
        app:tabIndicatorColor="#3F3FFD"
        app:tabSelectedTextColor="@color/black"
        app:tabRippleColor="@color/transparent"
        app:tabTextColor="@color/gray_color"
        app:tabTextAppearance="@style/tabTextStyle">

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="수록곡" />

        <com.google.android.material.tabs.TabItem
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="상세정보" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/album_content_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>


</androidx.coordinatorlayout.widget.CoordinatorLayout>